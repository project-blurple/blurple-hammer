{
  "name": "blurple-hammer",
  "main": "build",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "docker": "npm run docker:build && npm run docker:up",
    "docker:build": "docker-compose --project-directory . build",
    "docker:down": "docker-compose --project-directory . down",
    "docker:logs": "docker-compose --project-directory . logs --tail=500 -f",
    "docker:start": "npm run docker:up",
    "docker:stop": "npm run docker:down",
    "docker:up": "docker-compose --project-directory . up -d",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node .",
    "test": "jest"
  },
  "dependencies": {
    "@sapphire/type": "2.5.1",
    "@typegoose/typegoose": "12.8.0",
    "bufferutil": "4.0.8",
    "cookie-parser": "1.4.7",
    "decompress": "4.2.1",
    "dedent": "1.5.3",
    "discord-oauth2": "2.12.1",
    "discord.js": "14.16.3",
    "dotenv": "16.4.5",
    "erlpack": "github:discord/erlpack",
    "express": "4.21.1",
    "express-rate-limit": "7.4.1",
    "fs-extra": "11.2.0",
    "helmet": "8.0.0",
    "jsonwebtoken": "9.0.2",
    "match-sorter": "7.0.0",
    "mongoose": "8.7.3",
    "morgan": "1.10.0",
    "nodemailer": "6.9.16",
    "superagent": "10.1.1",
    "svg-png-converter": "0.0.9",
    "svg2img": "1.0.0-beta.2",
    "text-to-svg": "3.1.5",
    "utf-8-validate": "6.0.4",
    "winston": "3.15.0",
    "winston-daily-rotate-file": "5.0.0",
    "zlib-sync": "0.1.9"
  },
  "devDependencies": {
    "@tsconfig/node18": "18.2.4",
    "@tsconfig/strictest": "2.0.5",
    "@types/cookie-parser": "1.4.7",
    "@types/decompress": "4.2.7",
    "@types/express": "4.17.21",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.7",
    "@types/morgan": "1.9.9",
    "@types/node": "18.19.65",
    "@types/nodemailer": "6.4.17",
    "@types/superagent": "8.1.9",
    "@types/text-to-svg": "3.1.4",
    "eslint": "8.57.1",
    "eslint-config-promise": "github:promise/eslint-config",
    "jest": "29.7.0",
    "ts-jest": "29.2.5",
    "typescript": "5.6.3"
  },
  "eslintConfig": {
    "extends": "promise"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  }
}
