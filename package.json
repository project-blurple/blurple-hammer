{
  "name": "blurple-hammer",
  "main": "build",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "docker": "npm run docker:build && npm run docker:up",
    "docker:build": "docker-compose --project-directory . build",
    "docker:down": "docker-compose --project-directory . down",
    "docker:logs": "docker-compose --project-directory . logs --tail=500 -f",
    "docker:start": "npm run docker:up",
    "docker:stop": "npm run docker:down",
    "docker:up": "docker-compose --project-directory . up -d",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node .",
    "test": "jest"
  },
  "dependencies": {
    "@sapphire/type": "2.6.0",
    "@typegoose/typegoose": "12.14.0",
    "bufferutil": "4.0.9",
    "cookie-parser": "1.4.7",
    "decompress": "4.2.1",
    "dedent": "1.5.3",
    "discord-oauth2": "2.12.1",
    "discord.js": "14.16.3",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "express-rate-limit": "7.5.0",
    "fs-extra": "11.3.0",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "match-sorter": "8.0.2",
    "mongoose": "8.14.0",
    "morgan": "1.10.0",
    "nodemailer": "6.10.1",
    "superagent": "10.2.1",
    "svg-png-converter": "0.0.9",
    "svg2img": "1.0.0-beta.2",
    "text-to-svg": "3.1.5",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0",
    "zlib-sync": "0.1.10"
  },
  "devDependencies": {
    "@tsconfig/node22": "22.0.2",
    "@tsconfig/strictest": "2.0.5",
    "@types/cookie-parser": "1.4.9",
    "@types/decompress": "4.2.7",
    "@types/express": "5.0.3",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.7",
    "@types/morgan": "1.9.10",
    "@types/node": "22.15.31",
    "@types/nodemailer": "6.4.17",
    "@types/superagent": "8.1.9",
    "@types/text-to-svg": "3.1.4",
    "eslint": "9.29.0",
    "eslint-config-promise": "github:promise/eslint-config",
    "jest": "30.0.0",
    "ts-jest": "29.4.0",
    "typescript": "5.8.3"
  },
  "eslintConfig": {
    "extends": "promise"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "packageManager": "pnpm@10.10.0"
}
